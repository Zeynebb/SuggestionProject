<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Ödüllü Öneri Sistemi</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            margin: 0;
        }

        .navbar {
            overflow: hidden;
            background-color: #333;
            position: fixed;
            top: 0;
            width: 100%;
        }

            .navbar a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

        .navbar-fixed-top,
        .navbar-fixed-bottom {
            position: fixed;
            right: 0;
            left: 0;
            border-width: 0 0 10px;
        }

        .navbar a:hover {
            color: gray;
        }

        .main {
            padding: 16px;
            margin-top: 30px;
            height: 1500px; /* Used in this example to enable scrolling */
        }
    </style>
</head>
<body style="margin: 0;
    z-index: -1;
    overflow-y: scroll;font-family:Helvetica Neue, Helvetica, Arial, sans-serif;
    font-size: 14px;
    line-height: 1.428571429;
    color: #333333;
    background-color:ghostwhite;">
        <div class="container">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <a href="#">
                    <img src="~/Content/logobeyaz.png" style="width:80px;height:20px;" />
                </a>
                @Html.ActionLink("Giriş Yap", "Index", "Home")

            </div>
        </div>
    
    <div class="container body-content">
        @RenderBody()
     <!--   <hr />
         <footer>
          
            <p>&copy; @DateTime.Now.Year - </p>
        
        </footer>-->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
