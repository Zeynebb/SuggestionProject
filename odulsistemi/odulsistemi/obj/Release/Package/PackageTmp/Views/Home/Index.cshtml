@model odulsistemi.Models.odul_user
@{
    ViewBag.Title = "Home Page";
}
<form action="/Home/Index" method="post" >
    <table class="giris_table" style="text-align:right; overflow:hidden;margin-right: auto;margin-left: auto;margin-top:120px;">
        <caption id="baslikGiris" style="text-align: center;font-weight: bold;font-size:25px;margin-left:40px;">GİRİŞ YAP</caption>
        <tr>
            <td>
                <label class="label_kayit" for="tanim" style=" display: inline-block;margin-bottom: 5px;font-weight: bold;">Kullanıcı Adı:</label>
            </td>
            <td><input type="text" name="kullanici_adi" id="kullanici_adi" class="inputOzellik" style="width: 4000px;height:40px;word-wrap:break-word;padding-left:0px;padding-right:5px;" required/></td> 
        </tr>
        <tr>
            <td><label class="label_kayit" for="tanim" style=" display: inline-block;margin-bottom: 5px;font-weight: bold;">Şifre:</label></td>
            <td><input type="password" name="sifre" class="inputOzellik" style="width: 4000px;height:40px;word-wrap:break-word;padding-left:0px;padding-right:5px;" required/></td> 
        </tr>
        <tr>
            <td>
            </td>
            <td>
                <p style="float:right;">@Html.ActionLink("Kayıt Ol", "KayitOl", "Home")</p>
            </td>
            
            </tr>
        <tr>
            <td></td>
            <td><input type="submit" id="girisButon" style="border-style:double;border-width:3px;border-color:black;" value="GİRİŞ YAP" /></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <p class="uyariMesaji" style="color: darkred;font-weight: bold;font-size: 20px;margin-top: 20px;">
                    @if (TempData["uyarıMesaj"] != null)
                    {
                        @TempData["uyarıMesaj"].ToString();
                    }
                </p>
            </td>
        </tr>
    </table>
    

</form>
